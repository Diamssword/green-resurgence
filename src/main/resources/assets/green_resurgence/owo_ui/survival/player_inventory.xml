<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>

                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical" id="subPanelButtons">
                            <children>
                            </children>
                            <sizing><horizontal method="fill">10</horizontal></sizing>
                        </flow-layout>
                        <flow-layout direction="vertical" id="layoutSubPanels">
                            <children>
                                <subscreen id="subpanels" source="survival/empty">
                                <sizing>
                                    <vertical method="fill">100</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                              </subscreen>
                            </children>
                            <sizing>
                            <vertical method="fill">100</vertical>
                            <horizontal method="fill">90</horizontal>
                        </sizing>
                        </flow-layout>
                    </children>
                     <sizing>
                        <vertical method="fill">80</vertical>
                        <horizontal method="fill">30</horizontal>
                    </sizing>
                    <positioning type="relative">0,50</positioning>
                </flow-layout>
                <flow-layout direction="horizontal">
                    <children/>
                    <sizing><horizontal method="fill">30</horizontal></sizing>
                </flow-layout>

                <flow-layout direction="horizontal" id="flow1"> <!---->
                    <children>
                        <flow-layout direction="vertical">
                            <children>

                                <inventory name="disabled" id="armor" width="1" height="4"/>
                                <inventory name="disabled" id="offhand" width="1" height="1"/>
                                <inventory name="disabled" id="bags" width="1" height="3"/>
                            </children>
                            <surface>
                                <gpanel/>
                            </surface>
                            <padding>
                                <all>5</all>
                            </padding>
                            <margins>
                                <right>5</right>
                            </margins>
                        </flow-layout>
                        <flow-layout direction="vertical" id="'flow2">
                            <children>
                                <freerowgrid columns="5" id="bonusLayout">
                                    <children/>
                                </freerowgrid>
                                <flow-layout direction="vertical" id="'flow3">
                                    <children>
                                        <inventory id="backpack" name="disabled" width="1" height="1"
                                                   texture="blue.png">
                                            <margins>
                                                <bottom>5</bottom>
                                            </margins>
                                        </inventory>

                                        <flow-layout direction="horizontal">
                                            <children>
                                                <inventory id="satchelLeft" name="disabled" width="1" height="3"
                                                           texture="orange.png">
                                                </inventory>
                                                <inventory id="player" name="disabled" width="3" height="3">

                                                </inventory>
                                                <inventory id="satchelRight" name="disabled" width="1" height="3"
                                                           texture="orange.png"/>
                                            </children>
                                            <gap>5</gap>
                                            <margins>
                                                <bottom>5</bottom>
                                            </margins>
                                        </flow-layout>
                                        <inventory id="hotbar" width="9" height="1"/>
                                    </children>
                                    <surface>
                                        <gpanel/>
                                    </surface>
                                    <padding>
                                        <all>5</all>
                                    </padding>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                </flow-layout>
                                <freerowgrid columns="5" id="malusLayout">
                                    <children></children>
                                </freerowgrid>
                            </children>
                        </flow-layout>

                    </children>
                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <margins>
                        <all>5</all>
                    </margins>
                    <!---->

                </flow-layout>
                <subscreen id="subcontainer" source="survival/player_craft">
                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">30</horizontal>
                    </sizing>
                </subscreen>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
