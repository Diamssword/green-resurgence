<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical" id="ty">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <bentity id="stack_display" type="item">
                            <sizing>
                                <vertical method="fixed">40</vertical>
                                <horizontal method="fixed">40</horizontal>
                            </sizing>
                            <mouse-rotation>true</mouse-rotation>
                        </bentity>
                        <inventory id="tool_slot" width="1" height="1" name="disabled"/>

                        <flow-layout direction="horizontal" id="upgrades_panel">
                            <children></children>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>
                    <gap>10</gap>
                    <vertical-alignment>center</vertical-alignment>
                    <padding>
                        <all>5</all>
                    </padding>

                    <surface>
                        <panel/>
                    </surface>
                    <sizing>
                        <horizontal method="fill">80</horizontal>
                        <vertical method="fill">50</vertical>
                    </sizing>
                    <horizontal-alignment>center</horizontal-alignment>
                </flow-layout>
            </children>
            <horizontal-alignment>left</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <margins>
                <all>5</all>
            </margins>
        </flow-layout>

    </components>
</owo-ui>
