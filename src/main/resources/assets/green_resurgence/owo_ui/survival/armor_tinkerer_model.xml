<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
<components>
<flow-layout direction="vertical">
    <children>
        <flow-layout direction="vertical">
            <children>
                 <flow-layout direction="horizontal" id="layout">
                    <children>
                        <flow-layout direction="vertical">
                            <children><button id="back"><text>&lt;</text><tooltip-text>Retour</tooltip-text></button></children>
                            <sizing><vertical method="fill">100</vertical></sizing>
                        </flow-layout>
                        <item id="item">
                            <sizing><horizontal method="fixed">100</horizontal><vertical method="fixed">100</vertical></sizing>
                        </item>
                         <scroll direction="vertical">
                            <freerowgrid columns="2" id="grid">
                                <children/>
                                <padding>1</padding>
                            </freerowgrid>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                             <vertical-alignment>center</vertical-alignment>
                        </scroll>
                    </children>
                     <vertical-alignment>center</vertical-alignment>
                    <sizing><vertical method="fill">85</vertical></sizing>
                </flow-layout>
                <button id="confirm"><text>Confirmer</text></button>
            </children>
             <padding><all>5</all></padding>
            <sizing><vertical method="fill">80</vertical></sizing>
            <vertical-alignment>top</vertical-alignment>

            <surface>
                <gpanel/>
            </surface>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>

    </children>
    <sizing><vertical method="fill">100</vertical><horizontal method="fill">100</horizontal></sizing>
    <horizontal-alignment>center</horizontal-alignment>
    <vertical-alignment>center</vertical-alignment>
    <surface><vanilla-translucent/></surface>
</flow-layout>

</components>
</owo-ui>
