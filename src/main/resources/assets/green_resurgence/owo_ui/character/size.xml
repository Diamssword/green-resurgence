<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal" >
            <children>
                <flow-layout direction="horizontal" >
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <horizontal-text-alignment>left</horizontal-text-alignment>
                                    <text>----Position----</text>
                                </label>
                                <label>
                                    <text>Width</text>
                                </label>
                                <discrete-slider max="12" min="8" id="width">
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </discrete-slider>
                            </children>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>

                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">30</horizontal>
                            </sizing>
                            <margins>
                                <all>0</all>
                            </margins>

                        </flow-layout>
                      <player id="player">
                          <look-at-cursor>true</look-at-cursor>
                          <scale-to-fit>true</scale-to-fit>
                          <sizing><horizontal method="fill">40</horizontal><vertical method="fill">100</vertical></sizing>
                      </player>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <horizontal-text-alignment>left</horizontal-text-alignment>
                                    <text>----Position----</text>
                                </label>
                                <label>
                                    <text>Height</text>
                                </label>
                                <discrete-slider  max="12" min="8" id="height">

                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </discrete-slider>
                            </children>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>

                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">30</horizontal>
                            </sizing>
                            <margins>
                                <all>0</all>
                            </margins>

                        </flow-layout>
                    </children>
                    <padding><all>5</all></padding>

                    <sizing><vertical method="fill">90</vertical><horizontal method="fill">90</horizontal></sizing>
                    <surface>
                        <panel/>
                    </surface>
                </flow-layout>

            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
            <sizing><vertical method="fill">100</vertical><horizontal method="fill">100</horizontal></sizing>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>
    </components>
</owo-ui>
