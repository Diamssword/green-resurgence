<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <!-- Gauche -->
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="vertical">
                                    <children>
                                        <hudicon id="infectionIcon" texture="green_resurgence:hud/icons.png"
                                                 texture-width="32" texture-height="32" region-height="16"
                                                 region-width="16" u="16">
                                            <sizing>
                                                <vertical method="fixed">12</vertical>
                                                <horizontal
                                                        method="fixed">12
                                                </horizontal>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudicon>
                                        <label id="infectionText">
                                            <color>#54ceed</color>
                                            <shadow>true</shadow>
                                            <text>0%</text>
                                        </label>
                                    </children>
                                    <padding>
                                        <left>2</left>
                                    </padding>
                                    <gap>2</gap>
                                    <horizontal-alignment>center</horizontal-alignment>
                                </flow-layout>
                                <flow-layout direction="vertical">
                                    <children>
                                        <hudicon id="armorIcon" texture="green_resurgence:hud/icons.png"
                                                 texture-width="32" texture-height="32" region-height="9"
                                                 region-width="9">
                                            <sizing>
                                                <vertical method="fixed">12</vertical>
                                                <horizontal
                                                        method="fixed">12
                                                </horizontal>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudicon>
                                        <label id="armorText">
                                            <color>#54ceed</color>
                                            <shadow>true</shadow>
                                            <text>20</text>
                                        </label>
                                    </children>
                                    <padding>
                                        <left>2</left>
                                    </padding>
                                    <gap>2</gap>
                                    <horizontal-alignment>center</horizontal-alignment>
                                </flow-layout>

                            </children>
                            <vertical-alignment>top</vertical-alignment>
                            <gap>10</gap>
                            <padding>
                                <top>30</top>
                                <left>2</left>
                            </padding>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </flow-layout>
                        <!-- Centre -->
                        <flow-layout direction="vertical">
                            <children>
                            </children>

                            <horizontal-alignment>center</horizontal-alignment>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">60</horizontal>
                            </sizing>
                        </flow-layout>
                        <!-- Droite -->
                        <flow-layout direction="vertical">
                            <children>
                            </children>
                            <padding>
                                <top>5</top>
                                <right>2</right>
                            </padding>

                            <horizontal-alignment>right</horizontal-alignment>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>
                    <sizing>
                        <vertical method="fill">70</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>
                </flow-layout>
                <!-- Bas -->
                <flow-layout direction="horizontal">
                    <children>
                        <!-- Bas Gauche -->
                        <flow-layout direction="vertical">
                            <children>
                                <healthicon id="health" texture="green_resurgence:hud/hearts.png" texture-width="360"
                                            texture-height="18" region-height="18" region-width="18">
                                    <sizing>
                                        <horizontal method="fixed">36</horizontal>
                                        <vertical method="fixed">36</vertical>
                                    </sizing>
                                    <blend>true</blend>
                                </healthicon>
                            </children>
                            <padding>
                                <bottom>5</bottom>
                                <left>2</left>
                            </padding>
                            <vertical-alignment>bottom</vertical-alignment>
                            <horizontal-alignment>left</horizontal-alignment>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>
                        <!-- Bas Centre -->
                        <flow-layout direction="vertical">
                            <children>

                                <heldtooltip id="heldtooltip">
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </heldtooltip>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <offhandslot id="offhandleft" texture="green_resurgence:hud/hotbar.png">
                                            <blend>true</blend>
                                        </offhandslot>
                                        <hotbar id="hotbar" texture="green_resurgence:hud/hotbar.png">
                                            <blend>true</blend>
                                            <size>10</size>
                                        </hotbar>
                                        <offhandslot id="offhandright" texture="green_resurgence:hud/hotbar.png">
                                            <blend>true</blend>
                                        </offhandslot>
                                    </children>
                                    <allow-overflow>true</allow-overflow>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                    <gap>6</gap>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </flow-layout>

                            </children>

                            <allow-overflow>true</allow-overflow>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">60</horizontal>
                            </sizing>
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>bottom</vertical-alignment>
                            <padding>
                                <bottom>5</bottom>
                            </padding>
                            <gap>1</gap>
                        </flow-layout>
                        <!-- Bas Droite -->
                        <flow-layout direction="vertical">
                            <children>
                                 <hudbar id="mountHealth" texture="green_resurgence:hud/mount.png" reversed="false"
                                         texture-width="82" texture-height="18" region-width="82" region-height="9">
                                    <sizing>
                                        <horizontal method="fixed">82</horizontal>
                                    </sizing>
                                    <blend>true</blend>
                                </hudbar>
                                <hudbar id="mountJump" texture="green_resurgence:hud/jump.png" reversed="false"
                                        texture-width="82" texture-height="18" region-width="82" region-height="7">
                                    <sizing>
                                        <horizontal method="fixed">82</horizontal>
                                    </sizing>
                                    <blend>true</blend>
                                </hudbar>
                                 <flow-layout direction="horizontal">
                                    <children>
                                        <hudicon id="airIcon" texture="green_resurgence:hud/air.png" texture-width="128"
                                                 texture-height="64" region-height="24" region-width="24" v="40">
                                            <sizing>
                                                <vertical method="fixed">12</vertical>
                                                <horizontal
                                                        method="fixed">12
                                                </horizontal>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudicon>
                                        <hudbar id="air" texture="green_resurgence:hud/air.png" reversed="true"
                                                texture-width="128" texture-height="64" region-width="128"
                                                region-height="20">
                                            <sizing>
                                                <vertical method="fixed">10</vertical>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudbar>
                                    </children>
                                </flow-layout>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <hudicon texture="green_resurgence:hud/stamina.png" texture-width="128"
                                                 texture-height="64" region-height="24" region-width="24" v="40">
                                            <sizing>
                                                <vertical method="fixed">12</vertical>
                                                <horizontal
                                                        method="fixed">12
                                                </horizontal>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudicon>
                                        <hudbar id="stamina" texture="green_resurgence:hud/stamina.png" reversed="true"
                                                texture-width="128" texture-height="64" region-width="128"
                                                region-height="20">
                                            <sizing>
                                                <vertical method="fixed">10</vertical>
                                            </sizing>
                                            <blend>true</blend>
                                        </hudbar>
                                    </children>
                                </flow-layout>
                            </children>
                            <padding>
                                <bottom>5</bottom>
                                <right>2</right>
                            </padding>
                            <vertical-alignment>bottom</vertical-alignment>
                            <horizontal-alignment>right</horizontal-alignment>
                            <gap>2</gap>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>
                    </children>
                    <sizing>
                        <vertical method="fill">30</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>
                </flow-layout>
            </children>
            <sizing>
                <vertical method="fill">100</vertical>
                <horizontal method="fill">100</horizontal>
            </sizing>
            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </flow-layout>
    </components>
</owo-ui>
